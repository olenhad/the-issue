<% provide(:title, 'Sign up') %>
 <%= javascript_include_tag "coffeescripts/users", "data-turbolinks-track" => true %>
<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<%= form_for(@user, html: {role: "form", class: "form-horizontal"}) do |f| %>
		 <%= render 'shared/error_messages' %>
		<div class="form-group">
			<%= f.label :name %>
	      	<%= f.text_field :name %>
		</div>
	    
	    <div class="form-group">
	    	<%= f.label :email %>
	      <%= f.text_field :email %>
	
	    </div>
	      
	      <div class="form-group">
	      	<%= f.label :password %>
	      	<%= f.password_field :password %>
	      </div>

	      <div class="form-group">
	      	<%= f.label :password_confirmation, "Confirmation" %>
	      <%= f.password_field :password_confirmation %>
	
	      </div>

	      
      	<%= f.submit "Create my account", class: "btn btn-large btn-primary" %>
      	<% end %>
	</div>
</div>
<div class="row">
<div class="col-md-6 col-md-offset-3">
		<h3>Or</h3>
	<button type="button" class="btn btn-primary" id="fb-login-button">Log in with Facebook</button>	
</div>

</div>

