<% provide(:title, 'Sign up') %>
 <%= javascript_include_tag "coffeescripts/users", "data-turbolinks-track" => true %>
<div class="row register-opts">
<div class="col-md-4 register-opt">
	<button type="button" class="btn btn-primary" id="fb-login-button">Log in with Facebook</button>	
</div>

	<div class="col-md-4 register-opt">
		<p> Or create an account with your email</p>

		<%= form_for(@user, html: {role: "form", class: "form-horizontal"}) do |f| %>
		 <%= render 'shared/error_messages' %>
		<div class="form-group">
	      	<%= f.text_field :name, placeholder: "Name"%>
		</div>
	    
	    <div class="form-group">
	      <%= f.text_field :email, placeholder: "Email" %>
	
	    </div>
	      
	      <div class="form-group">
	      	<%= f.password_field :password, placeholder: "Password" %>
	      </div>

	      <div class="form-group">
	      <%= f.password_field :password_confirmation, placeholder: "Confirm Password" %>
	
	      </div>

	      
      	<%= f.submit "Create my account", class: "btn btn-large btn-primary" %>
      	<% end %>
	</div>
	<div class="col-md-4 register-opt">
		<p> If you've already registered</p>
		
			<form action="/login" method="post">
				 <%= hidden_field_tag :authenticity_token, form_authenticity_token -%>
			
		    <div class="form-group">
		      <input type="text" name="email" placeholder="Email">
		
		    </div>
		      
		      <div class="form-group">
		      	<input type="password" name="password" placeholder="Password">
		      </div>
		      
	      	<button class="btn btn-primary"> Login</button>
      		
	   		</form>
	    
	</div>
</div>
<div class="row">


</div>

